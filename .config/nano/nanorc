# auto identacion
set autoindent

# tamano de tab
set tabsize 4

# bajado continuo y no paginado
set smooth

# uso de mouse
set mouse

# desactivar help (lineas inferiores)
#set nohelp

# si una linea es mas larga del ancho continua en la siguiente
set softwrap

# numeros de lineas
set linenumbers

# sintaxis
include "/usr/share/nano/*.nanorc"

# sintaxis mejorada (solo si se instalo nano-syntax-higlighting)
include "/usr/share/nano-syntax-highlighting/*.nanorc"

# convierte tabs a espacios
set tabstospaces
