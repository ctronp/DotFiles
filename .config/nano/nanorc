# auto identacion
set autoindent

# tamano de tab
set tabsize 4

# bajado continuo y no paginado
# set smooth

# uso de mouse
set mouse

# desactivar help (lineas inferiores)
#set nohelp

# si una linea es mas larga del ancho continua en la siguiente
set softwrap

# numeros de lineas
set linenumbers


# sintaxis
include "/usr/share/nano/*.nanorc"

# sintaxis mejorada (solo si se instalo nano-syntax-higlighting)
include "/usr/share/nano-syntax-highlighting/*.nanorc"

# convierte tabs a espacios
set tabstospaces

# color de numeros
set numbercolor  bold,italic,magenta,normal

# color del titulo
set titlecolor bold,italic,cyan,normal

# color del tecto de la zona help
set functioncolor cyan,black

# errorcolor
set errorcolor cyan,normal

# color de las combinaciones de teclas en la zona help
set keycolor bold,white,normal

# color de los comentarios en mimeapps.list
syntax "mimeapps.list" "mimeapps.list"
color blue "^\s*#.*"
