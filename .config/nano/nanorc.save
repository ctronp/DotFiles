# auto identacion
set autoindent

# tamano de tab
set tabsize 4

# bajado continuo y no paginado
set smooth

# uso de mouse
set mouse

# desactivar help (lineas inferiores)
#set nohelp

# si una linea es mas larga del ancho continua en la siguiente
set softwrap

# numeros de lineas
set linenumbers

# sintaxis
include "/usr/share/nano/*.nanorc"

# sintaxis mejorada (solo si se instalo nano-syntax-higlighting)
include "/usr/share/nano-syntax-highlighting/*.nanorc"

# convierte tabs a espacios
set tabstospaces

# color de numeros
set numbercolor  bold,italic,magenta,black

# color del titulo
set titlecolor bold,italic,cyan,black

# color del tecto de la zona help
set functioncolor cyan,black

# errorcolor
#set errorcolor cyan,black

# color de las combinaciones de teclas en la zona help
set keycolor bold,white,black

# color del prompt
#set promptcolor

# no se xd
#set scrollercolor white,black

#color white,black ".*"
color normal,black ".*"
